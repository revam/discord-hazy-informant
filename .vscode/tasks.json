  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "npm build (dev)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "C:\\Windows\\System32\\bash.exe",
            "args": ["-i", "-c"]
          }
        }
