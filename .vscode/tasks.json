      "label": "npm build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "C:\\Windows\\System32\\bash.exe",
            "args": ["-i", "-c"]
          }
        }
      },
      "command": "npm run build",
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    }
  ]
